<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0058e8" />
            <gradient android:angle="-90" android:startColor="#0058e8" android:endColor="#0058e8"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0058e8" />
            <solid android:color="#a3a4a4"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0058e8" />
            <gradient android:angle="-90" android:startColor="#3b7ce5" android:endColor="#3b7ce5" />

        </shape>
    </item>
</selector>